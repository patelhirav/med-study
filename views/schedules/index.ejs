<div class="card">
  <div class="row between">
    <h2>Your Schedules</h2>
    <a class="btn" href="/schedules/new">Create New</a>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Tasks</th>
        <th>Progress</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% schedules.forEach(s=> { %>
        <tr>
          <td>
            <%= new Date(s.date).toDateString() %>
          </td>
          <td>
            <%= s.tasks.length %>
          </td>
          <td>
            <div class="progress small">
              <div class="progress-bar" style="width:<%= s.progress %>%"></div>
            </div>
            <%= s.progress %>%
          </td>
          <td>
            <a class="btn small" href="/schedules/<%= s.id %>/edit">Edit</a>
            <form class="inline" method="POST" action="/schedules/<%= s.id %>?_method=DELETE">
              <button class="btn small danger" type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>