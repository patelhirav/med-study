<div class="card">
  <h2>Study History</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Tasks</th>
        <th>Done</th>
        <th>Progress</th>
      </tr>
    </thead>
    <tbody>
      <% schedules.forEach(s=> { const done = s.tasks.filter(t => t.status==='done').length; %>
        <tr>
          <td>
            <%= new Date(s.date).toDateString() %>
          </td>
          <td>
            <%= s.tasks.length %>
          </td>
          <td>
            <%= done %>
          </td>
          <td>
            <div class="progress small">
              <div class="progress-bar" style="width:<%= s.progress %>%"></div>
            </div>
            <%= s.progress %>%
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>